#!/bin/sh -
[ 2 -ne $# ] && { echo "Usage ${0} org rep" 1>&2; exit 42; }

org="$1"
rep="$2"


  sed 's/^'"${org}"'$/'"${rep}"'/'                                      \
| sed 's/^'"${org}"'\([^a-zA-Z0-9_]\)/'"${rep}"'\1/'                    \
| sed 's/\([^a-zA-Z0-9_]\)'"${org}"'$/\1'"${rep}"'/'                    \
| sed 's/\([^a-zA-Z0-9_]\)'"${org}"'\([^a-zA-Z0-9_]\)/\1'"${rep}"'\2/g'

# EOF
